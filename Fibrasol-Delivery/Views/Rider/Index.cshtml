@{
    ViewData["Title"] = "Gestión de Conductores";
}

<link rel="stylesheet" href="~/css/rider/index.css" />

<div class="page-header mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h1 class="mb-2"><i class="bi bi-person-badge me-3"></i>Gestión de Conductores</h1>
            <p class="mb-0 opacity-75">Administra la información de tus conductores</p>
        </div>
        <button type="button" class="btn btn-light btn-lg" data-bs-toggle="modal" data-bs-target="#riderModal" onclick="openCreateModal()">
            <i class="bi bi-plus-circle me-2"></i>Nuevo Conductor
        </button>
    </div>
</div>

<div class="table-container">
    <table id="ridersTable" class="table table-striped table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th width="150">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <!-- Data will be loaded via AJAX -->
        </tbody>
    </table>
</div>

<!-- Rider Modal -->
<div class="modal fade" id="riderModal" tabindex="-1" aria-labelledby="riderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="riderModalLabel">Nuevo Conductor</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="riderForm">
                    <input type="hidden" id="riderId" value="">
                    <div class="mb-3">
                        <label for="riderName" class="form-label">Nombre del Conductor</label>
                        <input type="text" class="form-control" id="riderName" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary-custom" onclick="saveRider()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.min.js"></script>

    <link rel="stylesheet" href="~/lib/datatables/css/dataTables.bootstrap5.min.css">
    <script src="~/lib/datatables/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatables/js/dataTables.bootstrap5.min.js"></script>

    <script src="~/js/rider/index.min.js"></script>
}
